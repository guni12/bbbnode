server {
    listen 8787 default_server;
    listen [::]:8787 default_server;

    server_name react;

    root /var/www/react/html;

    index index.html index.htm;
    charset utf-8;

    error_page 404 /error.html;

    location / {
        if (!-e $request_filename) {
            rewrite ^(.*)$ /index.html break;
        }
    }

    location /.well-known {
        allow all;
    }
}